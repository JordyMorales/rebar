{
  "engines": {
    "node": ">=10.5.0",
    "npm": ">=6.0.0"
  },
  "lint-staged": {
    "units/**/*.js": ["eslint --fix", "prettier-eslint --write", "git add"],
    "units/**/*.jsx": ["eslint --fix", "prettier-eslint --write", "git add"]
  },
  "scripts": {
    "build-bump-version":
      "./node_modules/.bin/babel-node ./units/urb-base-tools/buildBumpVersion.js",
    "build-units": "./node_modules/.bin/babel-node ./units/urb-base-tools/buildUnits.js",
    "precommit": "yarn run flow && lint-staged",
    "update-ip": "./node_modules/.bin/babel-node ./units/urb-base-tools/updateIP.js",
    "setup-local":
      "cp ./units/_configuration/default.env ./.env",
    "setup-local-cut-version":
      "cp ./units/_configuration/default.env ./.env"
  }
}
